{
    "name": "ampcast-app",
    "productName": "ampcast",
    "version": "0.9.25",
    "description": "Ampcast music player",
    "homepage": "https://ampcast.app",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rekkyrosso/ampcast.git"
    },
    "author": {
        "name": "rekkyrosso",
        "email": "rekkyrosso@gmail.com"
    },
    "type": "module",
    "main": "./src/main.js",
    "license": "GPL-3.0",
    "scripts": {
        "start": "electron .",
        "build:mac": "electron-builder -- -mac",
        "build:win": "electron-builder -- -win",
        "build:linux": "electron-builder -- -linux"
    },
    "devDependencies": {
        "@electron/notarize": "^3.1.0",
        "electron": "github:castlabs/electron-releases#v39.2.7+wvcus",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "electron-audio-loopback": "^1.0.6",
        "electron-context-menu": "^4.1.1",
        "electron-log": "^5.1.2",
        "electron-store": "^11.0.2",
        "electron-unhandled": "^5.0.0",
        "electron-updater": "^6.3.2",
        "electron-window-state": "^5.0.3"
    },
    "engines": {
        "node": ">=24.x",
        "npm": ">=11.x"
    },
    "build": {
        "productName": "ampcast",
        "appId": "org.rekkyrosso.ampcast",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "files": [
            "src",
            "www",
            "node_modules",
            "package.json"
        ],
        "afterPack": "scripts/afterPack.cjs",
        "afterSign": "scripts/afterSign.cjs",
        "electronDownload": {
            "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
        },
        "mac": {
            "target": {
                "target": "default",
                "arch": [
                    "arm64",
                    "x64"
                ]
            },
            "type": "distribution",
            "category": "public.app-category.music",
            "icon": "assets/icons/ampcast.png",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "gatekeeperAssess": false,
            "notarize": false
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "assets/icons/ampcast.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "tar.xz"
            ],
            "icon": "assets/icons/ampcast.png",
            "category": "AudioVideo;Audio;Player"
        },
        "nsis": {
            "oneClick": false,
            "artifactName": "${productName}-${version}-${os}-${arch}.setup.${ext}",
            "installerIcon": "assets/icons/setup.ico",
            "allowToChangeInstallationDirectory": true,
            "include": "scripts/uninstaller.nsh"
        },
        "directories": {
            "buildResources": "assets"
        },
        "publish": {
            "provider": "github",
            "owner": "rekkyrosso",
            "repo": "ampcast"
        }
    }
}
